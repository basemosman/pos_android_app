            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:id="@+id/itemsbtnsco1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableRow>

                    <TableRow
                        android:id="@+id/itemsbtnsco2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableRow>

                    <TableRow
                        android:id="@+id/itemsbtnsco3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TableRow
                        android:id="@+id/itemsbtnsco4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                    <TableRow
                        android:id="@+id/itemsbtnsco5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                    <TableRow
                        android:id="@+id/itemsbtnsco6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TableRow
                        android:id="@+id/itemsbtnsco7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>